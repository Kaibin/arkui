@import "variable"

body
  padding: 15px
  width: 936px 
  margin: 0 auto

header
  margin-bottom: 30px

header h1
  font-weight: bold
  font-size: 60px
  line-height: 1

header h2
  font-weight: normal
  color: $grayLight
  font-size: 16px

.container
  min-width: 700px

.mod
  margin-bottom: 30px

.mod .hd
  margin-bottom: 15px

.mod .hd h3
  font-size: 18px
  color: $gray

code
  font: normal $baseFontSize $monoFontFamily
  border: 1px solid #eaeaea
  background #f8f8f8
  padding: 1px 5px
  margin: 0 2px
  border-radius: 3px
  white-space: nowrap

blockquote
  padding: 10px 15px
  background-color: #f7f7f7

// docs table
.table-zebra tbody tr:nth-child(odd) td
.table-zebra tbody tr:nth-child(odd) th
  background-color: #f9f9f9

.table tbody tr:hover td
.table tbody tr:hover th
  //background-color: #f5f5f5

#typography p
  font-size: 13px

#layout .col
  height: 34px
  position: relative
  background-color: #f3f3f3

#layout .col:hover
  background-color: $grayLighter

#layout .col code
  position: absolute
  top: 6px
  left: 4px

#store .main
  margin-bottom: 20px

#lists
  .list-col2 li
    height: 134px
    background-color: #f3f3f3

  .list-col2 li:hover
    background-color: $grayLighter

#lists code
  float: right
  margin-top: 4px
  font-size: $baseFontSize
  *margin-top: -22px
