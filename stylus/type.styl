@import "variable"

body
  font: $baseFontSize/$baseLineHeight $baseFontFamily

a, a:hover
  color: $linkColor
  text-decoration: none

a:hover
  color: white
  background-color: $linkColor

h1, h2, h3
  color: black
  font-weight: bold

h1
  font-size: 20px

h2
  font-size: 16px

h3
  font-size: 14px

p
  margin-bottom: 10px

b, em
  font-weight: bold

i
  font-style: italic

q:before
q:after
blockquote:before
blockquote:after
  content: ''

ul, ol
  font-size: 0
  li
    font-size: $baseFontSize

.list li
  display: block

.list-lined li
  margin-bottom: 8px
  padding-bottom: 8px
  border-bottom: 1px solid #eee

.list-col2 
  margin-right: -30px
  li
    display: inline-block
    *display: inline
    *zoom: 1
    vertical-align: top
    width: 297px
    margin: 0 30px 20px 0

.tags 
  li
    display: inline
    font-size: 14px
  a
    display: inline-block
    *display: inline
    *zoom: 1
    line-height: 1
    margin: 0 6px 4px 0
    padding: 6px 10px
    background-color: #ebebe4
    border-radius: 3px
    word-wrap: break-word
    overflow: hidden
  a:hover
   color: $linkColor
   background-color: #dbdbd4

